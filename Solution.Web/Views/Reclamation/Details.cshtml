@model Solution.Web.Models.ResponseVM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<section class="page-header section-notch">
    <div class="overlay">
        <div class="container">
            <h3>Reclamation #@ViewBag.Reclamation.ReclamationId</h3>
            <ul>
                <li><a href=@Url.Action("Index", "Home")>Home</a></li>
                <li>-</li>
                <li>Respound</li>
            </ul>
        </div><!-- container -->
    </div><!-- overlay -->
</section><!-- page header -->



<section class="blog-post padding-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="single-post">
                    <div class="post-content">
                        <h3>Reclamation à propos @ViewBag.Reclamation.ComplaintType</h3>
                        <ul class="post-meta">
                            <li><span class="icon flaticon-people-1"></span> <a href="#">@ViewBag.Reclamation.receiver.FirstName @ViewBag.Reclamation.receiver.LastName</a></li>
                            <li><span class="icon flaticon-calendar"></span> <a href="#">@ViewBag.Reclamation.DateReclamation</a></li>
                        </ul>
                        <p>@ViewBag.Reclamation.Comment</p>
                       
                    </div>
                    <div class="post-comments">
                        <h3>@ViewBag.Reclamation.response.Count Reponse</h3>
                    <hr />

                        <ul>
                            
                            @foreach (var item in @ViewBag.Reclamation.response)
                            {
                                <li>
                                    <div class="the-comment">
                                        <div class="comment-image">
                                            <img src="~/Content/Front/images/blog/user_03.jpg" alt="user image" class="img-responsive">
                                        </div>
                                        <div class="comment-content">
                                            <h4>@item.author.FirstName @item.author.LastName</h4>
                                            <span class="day"> @item.DateResponse </span>
                                            <p>@item.response</p>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div><!-- post-comments -->
                <hr />
                    <div class="reply-form">
                        <h3>Leave A Reply</h3>
                        @using (Html.BeginForm("Details", "Reclamation", new { userId = @ViewBag.Reclamation.ReclamationId }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                        
                            {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.TextAreaFor(m => m.response, 6,0,new { @class = "form-control com-input" })
                                    @Html.ValidationMessageFor(m => m.response, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="submit reponse" class="btn btn-default btn-block" />
                                </div>
                            </div>
                        }
                    </div>
                </div><!-- single post -->
            </div>
        </div>
    </div>
</section>
